@using System.Web.Mvc.Html
@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title = "Figures";
    ViewBag.PageHeader = "Vital Stats - Graphs";
}
@ViewExtensions2.jQuery()
@ViewExtensions2.jQueryUI()
<div align="center">
    <div style='width: 900px; background-color: white; text-align: right !important; padding-right: 40px; padding-top: 10px; padding-bottom: 0px'>
        <a class="btn btn-primary" href='/Figures/Figures/RefineFundView'>Refine Fund Chart</a>
    </div>
    <div id='Fund_chart_display' style='width: 900px; height: 400px;'>
        @Html.Action("ChartDisplayView")
    </div>
    <div id='Fund_chart_display2' style='width: 900px; height: 200px;'>
    </div>
    <div style='width: 900px; background-color: white; text-align: right !important; padding-right: 40px'>
        <a  class="btn btn-primary" href='/Figures/Figures/RefineAttendanceView'>Refine Attendance Chart</a>   
    </div>
    <div style="width: 297px; height: 300px; background-color: white; display: inline-block; text-align: center; padding: 20px">
        <table width="250" height="260" style="text-align: center;">
            <tr><td><label id='Total_Fund' style="font-size: 25px"></label><label id='Total_Fund2' hidden></label><br/><label style="font-size: 10px; color: grey">2018 GIVING</label></td></tr>
            <tr><td><label id='Total_Attendance' style="font-size: 25px"></label><br/><label style="font-size: 10px; color: grey">2018 ATTENDANCE</label></td></tr>
            <tr><td><label id='Total_Percent' style="font-size: 25px"></label><br/><label style="font-size: 10px; color: grey">2018 AVG GIVING PER ATTENDANCE</label></td></tr>
        </table>
    </div><div id='Attendance_chart_display' style='width: 600px; height: 300px; display: inline-block'>
        @Html.Action("AttendanceChartDisplayView")
    </div>
</div>









