@using UtilityExtensions
@model CmsWeb.Areas.Dialog.Models.DeleteMeeting
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Delete Meeting Progress</h4>
        </div>
        <div class="modal-body">
            @Html.HiddenIf("finished", "true", Model.Completed.HasValue)
            @Html.HiddenFor(m => m.QueryId)
            @Html.HiddenFor(m => m.MeetingId)
            @Html.DisplayFor(m => m.Count, new { Label = "Number of Attends" })
            @Html.DisplayFor(m => m.Started, "DateAndTime")
            @Html.DisplayFor(m => m.Processed)
            @Html.DisplayFor(m => m.Completed, "DateAndTime")
            @Html.DisplayForIf(m => m.ElapsedTime, Model.ElapsedTime.HasValue())
        </div>
        <div class="modal-footer">
            @if (Model.Completed.HasValue)
            {
                <a href="#" class="btn btn-success" data-dismiss="modal">Dismiss</a>
            }
        </div>
    </div>
</div>