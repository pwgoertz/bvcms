@model CmsWeb.Areas.Finance.Models.BundleModel
@using CmsWeb
@using UtilityExtensions
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Status</th>
                <th>Date</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Type</th>
                <th>Fund</th>
                <th>Check</th>
                <th>Notes</th>
                <th>Posted</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="9">No items yet.</td></tr>
            }
            @foreach (var c in Model.Contributions())
            {
                <tr>
                  <td>
                    @if (c.ReversedReturned)
                    {
                      <span style="color: red">@c.Status</span>
                    }
                    else
                    {
                      <span>@c.Status</span>
                    }
                  </td>
                    <td>@c.Date.FormatDate()</td>
                    <td><a href="/Contributions/@c.PeopleId">@c.Name</a></td>
                    <td class="right">@c.Amount.ToString2("N2")</td>
                    <td>@c.Type</td>
                    <td>@c.Fund</td>
                    <td>@c.Check
                        @if (c.ImageId != 0)
                        {
                            <a href="@Url.Action("GetCheckImage", "GetCheckImage", new {Area = "Dialog", id = c.ContributionId})" class="searchadd pid">
                                <i class="fa fa-info-circle"></i>
                            </a>
                        }
                    </td>
                    <td class="notes">@c.Notes</td>
                    <td>@c.PostingDate.FormatDate()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
