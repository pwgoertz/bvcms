@model CmsWeb.Areas.Org.Models.OrgGroupsModel
@{ 
    var checkinFeaturesEnabled = Setting("EnableSubgroupCheckin") == "true";
}
<div class="modal-body">
    @Html.HiddenFor(m => m.orgid)
    <div class="form-group">
        <label for="GroupName" class="control-label">Group Name</label>
        <input type="text" id="GroupName" name="GroupName" class="form-control" />
        <input type="hidden" id="groupid" name="groupid" class="edit-group-id" />
    </div>
    @if (checkinFeaturesEnabled)
    {
        <div class="form-group">
            <label for="AllowCheckin" class="control-label">Allow checkin</label>
            <select class="form-control" name="AllowCheckin" id="AllowCheckin">
                <option value="true">Yes, checkin is allowed</option>
                <option value="false">No, do not allow checkin</option>
            </select>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <label for="CheckInOpenDefault" class="control-label">Default Open</label>
                    <select class="form-control" name="CheckInOpenDefault" id="CheckInOpenDefault">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <label for="CheckInCapacityDefault" class="control-label">Default Capacity</label>
                    <input type="number" step="1" min="0" id="CheckInCapacityDefault" name="CheckInCapacityDefault" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="ScheduleId" class="control-label">Schedule</label>
            @Html.Partial("_OrgScheduleSelect", Model.GetOrgSchedules())
        </div>
    }
</div>
<div class="modal-footer">
    <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" />
    <input type="submit" class="btn btn-primary" value="Submit" />
</div>
